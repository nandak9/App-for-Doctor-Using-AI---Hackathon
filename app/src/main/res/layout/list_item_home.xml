<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/outline_background"
    android:layout_margin="4dp">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">


    <ImageView
        android:id="@+id/circle"
        android:layout_width="48dp"
        android:padding="16dp"
        android:layout_height="48dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image"
        android:layout_toLeftOf="@id/arrowRight"
        android:layout_margin="4dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/nameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Patient Name"
            android:textColor="@color/brand_color_dark"/>


        <TextView
            android:id="@+id/lastVisitedText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="Last Visited Time"
            android:textColor="@color/brand_color_dark"/>

    </LinearLayout>



    <ImageView
        android:id="@+id/arrowRight"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:tint="@color/brand_color_dark"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_baseline_arrow_forward_ios_24px"/>

    </RelativeLayout>


</RelativeLayout>